




<%= form_with model:book do |f| %>

<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="field">
 <label for="book_title">Title</label></br>
 <%= f.text_field :title %>
</div>
<div class="field">
 <label for="book_body">Body</label></br>
 <%= f.text_area :body %>
</div>
<div class="actions">
   <%= f.submit "Create Book" %>
</div>
<% end %>